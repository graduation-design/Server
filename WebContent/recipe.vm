  <!-- build:css styles/cookbook.css -->
  <link rel="stylesheet" href="http://graduation-design.github.io/cooking/dist/styles/cookbook.css
">
  <!-- endbuild-->

  <!-- build:js bower_components/webcomponentsjs/webcomponents.min.js -->
  <script src="http://graduation-design.github.io/cooking/dist/bower_components/webcomponentsjs/webcomponents.min.js
"></script>
